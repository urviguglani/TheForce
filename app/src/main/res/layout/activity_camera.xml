<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.force.the.smartmail.CameraActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/resultingImageView"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unsubscribe"
        android:id="@+id/unsubButton"
        android:layout_below="@+id/resultingImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong Addr"
        android:id="@+id/wrongAddrButton"
        android:layout_below="@+id/resultingImageView"
        android:layout_alignRight="@+id/resultingImageView"
        android:layout_alignEnd="@+id/resultingImageView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubscribeToLetter"
        android:id="@+id/SubButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/unsubButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/DetectedText"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/SubButton"
        android:layout_alignRight="@+id/SubButton"
        android:layout_alignEnd="@+id/SubButton"
        android:layout_alignLeft="@+id/resultingImageView"
        android:layout_alignStart="@+id/resultingImageView" />

</RelativeLayout>
